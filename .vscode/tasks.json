{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc",
            "type": "shell",
            "command": "./frontend/node_modules/typescript/bin/tsc",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "args": [
                "--noEmit",
                "--watch"
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true
        },
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "python3 manage.py runserver localhost:8000",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Start Dev Backend + Frontend",
            "dependsOn": [
                "Start Backend",
                "Start Frontend"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        }
    ]
}